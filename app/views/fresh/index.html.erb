<!DOCTYPE html>
<html ng-app = 'app'>
  <head>
    <title>Freshly</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="application.css">
  </head>

  
  <body ng-controller="FreshlyController">

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">

        <div class="navbar-header">        
            <div class="inner-addon left-addon menu">
              <i class="glyphicon glyphicon-search"></i>
              <form ng-submit="search()">
                  <input type="text" ng-model="search_term" class="form-control" placeholder = "Search" />
              </form>
            </div>
        </div>

         
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
                         
        </button>        

        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav" >
            <li class="active"><a href="#" ng-click="news_items('/news/random');" style="width:160px; text-align:center;">Home</a></li>
            <li class="dropdown" > 
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="width:160px; text-align:center;">Categories 
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li ng-repeat="category in categories">
                  <a href="#" ng-click="news_items('/news/' + category);">{{category}}</a>
                </li> 
              </ul>
            </li>           
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><div style="{text-color:'white'}" >Signed in as... <%= current_user.email %></div><li>
              <li>                  
                    <%= form_tag '/users/sign_out', :method => :get do %>
                      <span class="glyphicon glyphicon-user"> 
                      <%= submit_tag "Sign out", :class => "glyphicon glyphicon-user" %>
                      </span>
                    <% end %>
              </li>
            <% else %>
              <li>
                <%= form_tag '/users/sign_in', :method => :get do %>
                    <span class="glyphicon glyphicon-user"> 
                    <%= submit_tag "Sign in", class: "glyphicon glyphicon-user", :class => "glyphicon glyphicon-user" %>
                    </span>
                <% end %>
              </li>
              <li>
                <%= form_tag '/users/sign_up', :method => :get, html: {class: "nifty_form"} do %>
                    <span class="glyphicon glyphicon-user"> 
                    <%= submit_tag "Sign up", :class => "glyphicon glyphicon-user" %>
                    </span>
                <% end %>
              </li>
            <% end %>
          </ul>

        </div>
      </div>
    </nav>
  
    <div class="container">
      <div class="jumbotron">
        <img src="http://www.w3schools.com/bootstrap/cinqueterre.jpg" class="img-circle center-block" alt="Cinque Terre" width="304" height="180">
      </div>

      <div class="row" ng-show ="show_items" style="margin-left: 1px;">
        <div class="col-md-3 col-xs-11 news" ng-repeat="item in retrieve_news_items_to_show()">
          <div>
            <a href="{{item.url}}">{{item.title}}</a>
          </div>
        </div>
      </div>

      <div class="row" ng-hide="show_items" style="margin-left: 1px;">
        <div class="col-md-3 col-xs-11 news" ng-repeat="search_result in search_results">
          <div>
            <a href="{{search_result.url}}">{{search_result.title}}</a>
          </div>
        </div>
      </div>

    </div>


    <ul class="pager" ng-click="news_items('/news/all')">
      <li>
        <div>
          <a href="#" style="margin-right:85px;"> Show All </a>
      </div>
      </li>
    </ul>


    <div class="footer" >        
      <a href="#" style="color:white">Terms and Conditions</a>
    </div>

    
  <script src="js/jquery.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/angular.js"></script>
  <script src="app.js"></script>

</body>
</html>
